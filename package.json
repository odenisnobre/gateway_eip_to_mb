{
  "name": "gateway",
  "version": "1.0.1",
  "private": true,
  "bin": "gateway.js",
  "scripts": {
    "start": "node gateway.js",
    "dev": "node gateway.js",
    "build:win": "pkg . --targets node16-win-x64 --output dist/gateway && npm run copy-config",
	"copy-config": "npx shx cp configuration.json dist/",
    "build": "npm run build:win"
  },
  "dependencies": {
    "ethernet-ip": "^1.2.5",
    "modbus-serial": "^8.0.21-no-serial-port"
  },
  "devDependencies": {
    "pkg": "^5.7.0"
  },
  "pkg": {
    "assets": [
      "utils/config-default.json"
    ]
  }
}
